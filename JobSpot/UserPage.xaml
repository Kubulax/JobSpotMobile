<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JobSpot.UserPage"
             Background="Gray">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <Label x:Name="lbl_Nickname" FontSize="30" TextColor="Lime" FontAttributes="Bold, Italic" HorizontalOptions="CenterAndExpand"/>

                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Label Text="Imię:" FontFamily="arial" TextColor="Lime" FontSize="20" Grid.Row="0" Grid.Column="0" VerticalOptions="Center"/>
                    <Label Text="{Binding Name}" Grid.Row="0" Grid.Column="1" FontFamily="arial" FontSize="15" VerticalOptions="Center"/>

                    <Label Text="Nazwisko:" FontFamily="arial" TextColor="Lime" FontSize="20" Grid.Row="1" Grid.Column="0" VerticalOptions="Center"/>
                    <Label Text="{Binding Surname}" Grid.Row="1" Grid.Column="1" FontFamily="arial" FontSize="15" VerticalOptions="Center"/>

                    <Label Text="Data urodzin:" FontFamily="arial" TextColor="Lime" FontSize="20" Grid.Row="2" Grid.Column="0" VerticalOptions="Center"/>
                    <Label Text="{Binding DateOfBirth, StringFormat=\{0:dd.MM.yyyy\}}" Grid.Row="2" Grid.Column="1" FontFamily="arial" FontSize="15" VerticalOptions="Center"/>

                    <Label Text="Numer telefonu:" FontFamily="arial" TextColor="Lime" FontSize="20" Grid.Row="3" Grid.Column="0" VerticalOptions="Center"/>
                    <Label Text="{Binding PhoneNumber}" Grid.Row="3" Grid.Column="1" FontFamily="arial" FontSize="15" VerticalOptions="Center"/>

                    <Label Text="Miejsce zamieszkania:" FontFamily="arial" TextColor="Lime" FontSize="20" Grid.Row="4" Grid.Column="0" Margin="0,40,0,0"/>
                    <Label Text="{Binding PlaceOfResidence}" Grid.Row="5" FontFamily="arial" FontSize="15" VerticalOptions="Center"/>

                    <Label Text="Doświadczenie zawodowe:" FontFamily="arial" TextColor="Lime" FontSize="20" Grid.Row="6" Grid.Column="0" Margin="0,40,0,0"/>
                    <Label Text="{Binding WorkExperience}" Grid.Row="7" FontFamily="arial" FontSize="15" VerticalOptions="Center"/>

                    <Label Text="Edukacja" FontFamily="arial" TextColor="Lime" FontSize="20" Grid.Row="8" Grid.Column="0" Margin="0,40,0,0"/>
                    <Label Text="{Binding Education}" Grid.Row="9" FontFamily="arial" FontSize="15" VerticalOptions="Center"/>

                    <Label Text="Języki:" FontFamily="arial" TextColor="Lime" FontSize="20" Grid.Row="10" Grid.Column="0" Margin="0,40,0,0"/>
                    <Label Text="{Binding Languages}" Grid.Row="11" FontFamily="arial" FontSize="15" VerticalOptions="Center"/>

                    <Label Text="Umiejętności:" FontFamily="arial" TextColor="Lime" FontSize="20" Grid.Row="12" Grid.Column="0" Margin="0,40,0,0"/>
                    <Label Text="{Binding Skills}" Grid.Row="13" FontFamily="arial" FontSize="15" VerticalOptions="Center"/>

                    <Label Text="Kursy:" FontFamily="arial" TextColor="Lime" FontSize="20" Grid.Row="14" Grid.Column="0" Margin="0,40,0,0"/>
                    <Label Text="{Binding Courses}" Grid.Row="15" FontFamily="arial" FontSize="15" VerticalOptions="Center"/>

                    <Button Clicked="EditProfile" Text="EDYTUJ PROFIL" Grid.Row="16" Grid.Column="0" FontFamily="arial" FontAttributes="Bold, Italic" BackgroundColor="Lime" FontSize="20" HeightRequest="50" Padding="5" Margin="0,100,0,0" HorizontalOptions="Start"/>
                    <Button Clicked="ShowApplications" Text="POKAŻ APLIKACJE" Grid.Row="17" Grid.Column="0" FontFamily="arial" FontAttributes="Bold, Italic" BackgroundColor="Lime" FontSize="20" HeightRequest="50" Padding="5" Margin="0,10,0,25" HorizontalOptions="Start"/>
                </Grid>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>